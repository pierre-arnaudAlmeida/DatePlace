<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".launcher.ConnexionActivity">

    <!-- Logo Connexion-->
    <ImageView
        android:id="@+id/logo_connexion_app"
        android:layout_width="@dimen/logo_connexion_app_width"
        android:layout_height="@dimen/logo_connexion_app_height"
        android:layout_marginStart="@dimen/logo_connexion_app_marginStart"
        android:layout_marginTop="@dimen/logo_connexion_app_marginTop"
        android:layout_marginEnd="@dimen/logo_connexion_app_marginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"/>

    <!-- Nom de l'application -->
    <TextView
        android:id="@+id/appli_name"
        android:layout_width="@dimen/appli_name_width"
        android:layout_height="@dimen/appli_name_height"
        android:layout_marginStart="@dimen/appli_name_marginStart"
        android:layout_marginTop="@dimen/appli_name_marginTop"
        android:layout_marginEnd="@dimen/appli_name_marginEnd"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="Date Place"
        android:textColor="@color/white"
        android:textSize="32sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="344dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_connexion_app"/>

    <!-- Champs email de connexion-->
    <EditText
        android:id="@+id/connexion_identifier"
        android:layout_width="@dimen/connexion_identifier_width"
        android:layout_height="@dimen/connexion_identifier_height"
        android:layout_marginStart="@dimen/connexion_identifier_marginStart"
        android:layout_marginTop="@dimen/connexion_identifier_marginTop"
        android:layout_marginEnd="@dimen/connexion_identifier_marginEnd"
        android:paddingTop="@dimen/connexion_identifier_paddingTop"
        android:paddingLeft="@dimen/connexion_identifier_paddingLeft"
        android:hint="@string/connexion_identifier_HintText"
        android:textColorHint="#000"
        android:textColor="#000"
        android:textSize="@dimen/button_text_size"
        android:inputType="textEmailAddress"
        android:background="@drawable/background_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appli_name"/>

    <!-- Champs password de connexion-->
    <EditText
        android:id="@+id/connexion_password"
        android:layout_width="@dimen/connexion_password_width"
        android:layout_height="@dimen/connexion_password_height"
        android:layout_marginStart="@dimen/connexion_password_marginStart"
        android:layout_marginTop="@dimen/connexion_password_marginTop"
        android:layout_marginEnd="@dimen/connexion_password_marginEnd"
        android:background="@drawable/background_textview"
        android:paddingLeft="@dimen/connexion_password_paddingLeft"
        android:paddingTop="@dimen/connexion_password_paddingTop"
        android:hint="@string/connexion_password_HintText"
        android:textColorHint="#000"
        android:textColor="#000"
        android:textSize="@dimen/button_text_size"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connexion_identifier"/>

    <!-- Bouton de connexion-->
    <Button
        android:id="@+id/button_connect"
        android:layout_width="@dimen/button_connect_width"
        android:layout_height="@dimen/button_connect_height"
        android:layout_marginTop="@dimen/button_connect_marginTop"
        android:layout_marginStart="@dimen/button_connect_marginStart"
        android:layout_marginEnd="@dimen/button_connect_marginEnd"
        android:background="@drawable/background_button_connexion"
        android:text="@string/button_connect_text"
        android:textColor="#000"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connexion_password"/>

    <!-- Bouton de retour-->
    <Button
        android:id="@+id/button_goback"
        android:layout_width="@dimen/button_goback_width"
        android:layout_height="@dimen/button_goback_height"
        android:layout_marginStart="@dimen/button_goback_marginStart"
        android:layout_marginBottom="@dimen/button_goback_marginBottom"
        android:layout_marginTop="@dimen/button_goback_marginTop"
        android:layout_marginEnd="@dimen/button_goback_marginEnd"
        android:background="@drawable/background_button_connexion"
        android:text="@string/button_goback_text"
        android:textColor="#000"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_connect"/>

    <!-- Bouton d'inscription-->
    <Button
        android:id="@+id/button_go_inscription"
        android:layout_width="@dimen/button_go_inscription_width"
        android:layout_height="@dimen/button_go_inscription_height"
        android:layout_marginEnd="@dimen/button_go_inscription_marginEnd"
        android:layout_marginBottom="@dimen/button_go_inscription_marginBottom"
        android:layout_marginTop="@dimen/button_go_inscription_marginTop"
        android:background="@drawable/background_button_connexion"
        android:text="@string/button_sign_up"
        android:textColor="#000"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_goback"
        app:layout_constraintTop_toBottomOf="@+id/button_connect" />


</android.support.constraint.ConstraintLayout>